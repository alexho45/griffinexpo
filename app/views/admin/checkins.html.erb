
<%= form_tag (admin_checkins_path), id: :admin_checkins_search_form, method: :get do %>
  <h4>
    Select event:
    <%= select_tag :event_id, options_from_collection_for_select(Event.all, :id, :full_name, params[:event_id]), prompt: "Select event", id: :admin_select_event %>
    Select company:
    <%= select_tag :company_id, options_from_collection_for_select(@event_companies, :id, :full_name, params[:company_id]), prompt: "Select company", id: :admin_select_company %>
  </h4>
<% end %>

<%= form_tag (update_attendees_checkins_path) do %>
  <%= render partial: 'admin/event_attendees', locals: { attendees: @attendees, checked_attendees: @checked_attendees } %>

  <%= hidden_field_tag :event_id, params[:event_id] %>
  <%= submit_tag 'Update selected attendees' %>
  <%= link_to 'Selected attendees CSV', download_event_attendees_checkins_path(event_id: params[:event_id], format: :csv), method: :post, class: 'download-button selected-attendees', data: { path: download_event_attendees_checkins_path(event_id: params[:event_id], format: :csv) } %>
  <%= link_to 'Selected attendees PDF', download_event_attendees_checkins_path(event_id: params[:event_id], format: :pdf), method: :post, class: 'download-button selected-attendees', data: { path: download_event_attendees_checkins_path(event_id: params[:event_id], format: :pdf) } %>
  <%= link_to 'Selected attendees badges PDF', print_bagdes_checkins_path(event_id: params[:event_id], format: :pdf), method: :post, class: 'download-button selected-attendees', data: { path: print_bagdes_checkins_path(event_id: params[:event_id], format: :pdf) } %>
<% end %>
