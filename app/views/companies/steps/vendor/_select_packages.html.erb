
<h4>PLEASE SELECT A NEXT</h4>

<%= form_tag(select_packages_companies_path, method: :post) do %>
  <% Package.first(1).each do |package| %>
    <% packages_event = PackagesEvent.find_by(company_id: @company.id, event_id: @company.event.id, package_id: package.id) %>
    <h4>
      <%= check_box_tag "packages[#{package.id}][checked]", package.id, checked = packages_event.present? %> 
      <%= package.full_name.html_safe %>
    </h4>
    Number of Booths Required:
    <%= text_field_tag "packages[#{package.id}][quantity]", packages_event.try(:quantity) || 1 %>
    <br>
    Do you require electricity for your booth:
    <%= radio_button_tag "packages[#{package.id}][electricity]", 1, checked = packages_event.try(:electricity?) || true %> Yes
    <%= radio_button_tag "packages[#{package.id}][electricity]", 0, checked = !packages_event.try(:electricity?) || false %> No
    <hr>
  <% end %>
  <hr>

  <h4>
    If you require additional booth decorations, products and or setup services, please 
    <a href="http://SER.COM/griffinevent" target="_blank">click here</a>
    for our expo partner services.
  </h4>

  <%= submit_tag 'NEXT', class: 'btn btn-primary' %>
<% end %>
