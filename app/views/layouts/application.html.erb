<!DOCTYPE html>
<html>
<head>
  <title>Griffinexpo</title>
  <% if params[:format] && params[:format] == 'pdf' %>
    <%= wicked_pdf_stylesheet_link_tag 'application' %>
  <% else %>
    <%= stylesheet_link_tag 'application' %>
  <% end %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <a class="navbar-brand" href=<%= root_path %>>Griffinexpo</a>
        <%= link_to 'New Registration', new_registration_companies_path, method: :post, data: { confirm: "Are you sure? You will lost current status." }, class: 'navbar-brand' %>
      </div>
    </div>
  </nav>

  <div class="container theme-showcase">
    <div class="jumbotron">
      <div class="row">
        <div class="col-md-2 app-logo">
          <%= image_tag 'expo_logo.jpg', class: 'logo_image' %>
        </div>
        <div class="col-md-10 app-content">
          <%= yield %>
        </div>
      </div>
    </div>
  </div>

</body>
</html>
